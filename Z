-- Utworzenie roli 'test'
CREATE ROLE test;

-- Przyznanie uprawnień USAGE na schemacie 'camunda'
GRANT USAGE ON SCHEMA camunda TO test;

-- Przyznanie uprawnień SELECT na wszystkich tabelach w schemacie 'camunda'
GRANT SELECT ON ALL TABLES IN SCHEMA camunda TO test;

-- Automatyczne przyznawanie uprawnień SELECT na przyszłe tabele w schemacie 'camunda'
ALTER DEFAULT PRIVILEGES IN SCHEMA camunda GRANT SELECT ON TABLES TO test;

-- Utworzenie nowego użytkownika
CREATE USER nowy_uzytkownik WITH PASSWORD 'twoje_haslo';

-- Przypisanie roli 'test' nowemu użytkownikowi
GRANT test TO nowy_uzytkownik;
