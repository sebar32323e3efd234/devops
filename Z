#!/bin/bash

# Definiujemy zmienne
output_file="miejsce.txt"
data=$(date +"%Y-%m-%d %H:%M:%S")

# Sprawdzamy, co zajmuje miejsce w /opt, sortujemy wyniki wedÅ‚ug rozmiaru i dopisujemy do pliku
echo "Data: $data" >> $output_file
du -ah /opt | sort -rh >> $output_file
echo "------------------------" >> $output_file

echo "Zaktualizowano plik $output_file"
